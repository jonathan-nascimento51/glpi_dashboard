# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_size = 4
max_line_length = 88

# JavaScript/TypeScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Configuration files
[*.{toml,ini,cfg}]
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2
end_of_line = lf

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf

# Docker files
[{Dockerfile,Dockerfile.*}]
indent_size = 2

# Makefile
[{Makefile,makefile}]
indent_style = tab
indent_size = 4

# SQL files
[*.sql]
indent_size = 2

# CSS/SCSS files
[*.{css,scss,sass}]
indent_size = 2

# HTML files
[*.html]
indent_size = 2

# XML files
[*.xml]
indent_size = 2

# Package files
[{package.json,package-lock.json}]
indent_size = 2

# Requirements files
[requirements*.txt]
indent_size = 2

# Environment files
[.env*]
indent_size = 2

# GitHub workflows
[.github/workflows/*.{yml,yaml}]
indent_size = 2

# Pre-commit config
[.pre-commit-config.yaml]
indent_size = 2