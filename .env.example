# ===== CONFIGURAÇÃO DO FLASK =====
# Ambiente de execução (development, production)
FLASK_ENV=development
FLASK_DEBUG=1

# Chave secreta para sessões (gere uma chave única para produção)
SECRET_KEY=sua_chave_secreta_super_segura_aqui

# Configurações de servidor
PORT=5000
HOST=0.0.0.0

# ===== CONFIGURAÇÃO DO GLPI =====
# URL base do servidor GLPI (atualizada para usar GLPI_BASE_URL)
GLPI_BASE_URL=https://seu-glpi.exemplo.com/apirest.php

# Tokens de autenticação GLPI
# IMPORTANTE: Mantenha estes tokens seguros e não os commite no repositório
GLPI_APP_TOKEN=seu_app_token_aqui
GLPI_USER_TOKEN=seu_user_token_aqui

# Timeout para requisições GLPI (segundos)
GLPI_REQUEST_TIMEOUT=30

# Número máximo de tentativas para requisições
GLPI_MAX_RETRIES=3

# ===== CONFIGURAÇÃO DO REDIS =====
# URL de conexão com Redis para cache
REDIS_URL=redis://localhost:6379/0

# ===== CONFIGURAÇÃO DE CACHE =====
# Timeout padrão do cache em segundos
CACHE_DEFAULT_TIMEOUT=300

# Tipo de cache (simple, redis)
CACHE_TYPE=redis

# ===== CONFIGURAÇÃO DA API BACKEND =====
BACKEND_API_URL=http://localhost:5000
API_KEY=your-api-key
API_TIMEOUT=30

# ===== CONFIGURAÇÃO DE LOGS =====
# Nível de log (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Diretório para arquivos de log
LOG_DIR=./logs

# ===== CONFIGURAÇÃO DO MAPEAMENTO GLPI =====
# Diretório de saída para arquivos de lookup
MAPPING_OUTPUT_DIR=./data/lookups

# Nível de log para o mapeamento
MAPPING_LOG_LEVEL=INFO

# ===== CONFIGURAÇÃO DE PERFORMANCE =====
# Target P95 para tempo de resposta (ms)
PERFORMANCE_TARGET_P95=1000

# ===== CONFIGURAÇÃO DO FRONTEND =====
# URL da API para o frontend
REACT_APP_API_URL=http://localhost:5000

# Habilita polling para hot reload no frontend
CHOKIDAR_USEPOLLING=true

# ===== CONFIGURAÇÃO DE SEGURANÇA =====
# Domínios permitidos para CORS (separados por vírgula)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# ===== CONFIGURAÇÃO DE MONITORAMENTO (opcional) =====
# SENTRY_DSN=https://seu-sentry-dsn-aqui
# GRAFANA_URL=http://localhost:3001
# PROMETHEUS_URL=http://localhost:9090