# =============================================================================
# CONFIGURAÇÕES DO GLPI DASHBOARD - TEMPLATE DE AMBIENTE
# =============================================================================
# Copie este arquivo para .env e configure as variáveis conforme seu ambiente

# Configurações do Flask
FLASK_ENV=dev
FLASK_DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production
PORT=5000
HOST=0.0.0.0

# Configurações do GLPI API
GLPI_URL=http://your-glpi-server/glpi/apirest.php
GLPI_USER_TOKEN=your-glpi-user-token
GLPI_APP_TOKEN=your-glpi-app-token

# Configurações da API Backend
BACKEND_API_URL=http://localhost:5000
API_KEY=your-api-key-here
API_TIMEOUT=30

# Configurações de Cache Redis
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=RedisCache
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300
CACHE_KEY_PREFIX=glpi_dashboard:

# Configurações de Performance
PERFORMANCE_TARGET_P95=300

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
FLAG_USE_V2_KPIS=true
TASK_MANAGER_FILE_PATH=./temp/tasks.json

# Configurações de CORS
CORS_ORIGINS=*

# Configurações do Frontend
FRONTEND_URL=http://localhost:3001
FRONTEND_API_BASE_URL=http://localhost:5000

# Configurações de Desenvolvimento
DEV_MODE=true
DEBUG_METRICS=false
ENABLE_MOCK_DATA=false