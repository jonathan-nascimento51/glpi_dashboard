# Configuração de Produção - GLPI Dashboard

# Backend Configuration
FLASK_ENV=production
FLASK_DEBUG=false
SECRET_KEY=your-production-secret-key-here
DATABASE_URL=postgresql://user:password@localhost:5432/glpi_prod

# GLPI API Configuration
GLPI_API_URL=https://your-glpi-instance.com/apirest.php
GLPI_API_TOKEN=your-production-api-token
GLPI_USER_TOKEN=your-production-user-token

# Frontend Configuration
VITE_API_BASE_URL=https://your-api-domain.com/api
VITE_ENVIRONMENT=production
VITE_ENABLE_ANALYTICS=true
VITE_SENTRY_DSN=your-sentry-dsn-here

# Security
CORS_ORIGINS=https://your-frontend-domain.com
SSL_REDIRECT=true
SECURE_HEADERS=true

# Performance
CACHE_TYPE=redis
REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# Monitoring
MONITORING_ENABLED=true
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/glpi-dashboard/app.log

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100

# Feature Flags
FLAG_USE_V2_KPIS=true
FLAG_ENABLE_REAL_TIME_UPDATES=true
FLAG_ENABLE_ADVANCED_FILTERS=true
